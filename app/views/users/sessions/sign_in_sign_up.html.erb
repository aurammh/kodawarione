<%= form_for(@user, url: check_user_mail_path, :method => "post" ) do |f| %>
  <%= hidden_field_tag 'user_type' , "#{@user_type}" %>
  <%= f.hidden_field :user_type, value: @user_type  %>    
  <div class="d-flex flex-column flex-root">
    <!--begin::Authentication - Sign-in -->
    <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed">
      <!--begin::Content-->
      <div class="w-lg-500px mx-auto mt-10">
        <%= render "users/shared/flash", resource: resource %>
      </div>
      <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
        <!--begin::Logo-->
        <%= link_to root_path do %>
          <%= image_tag "layout/header_logo.png", class: "h-40px mb-12" %>   
        <% end %>  
        <!--end::Logo-->
        <!--begin::Wrapper-->
        <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
          <!--begin::Form-->
          <div class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" id="kt_sign_in_form">
            <!--begin::Heading-->
            <div class="text-center mb-10">
              <!--begin::Title-->
              <h1 class="text-dark mb-3"><%= t('registeration.session.student_title') %></h1> 
              <!--end::Title-->
              <!--begin::Link-->  
              <div class="text-gray-400 fw-bold fs-4">まだアカウントを持っていません? 
                <%= link_to(t('welcome.privacy policy.top_page_link.link10'),welcome_student_register_path , class: "link-primary fw-bolder") %>   
              </div>  
              <!--end::Link-->
            </div>
            <!--begin::Heading-->
            <!--begin::Input group-->
            <div class="fv-row mb-10 fv-plugins-icon-container">
              <!--begin::Label-->
              <label class="form-label fs-6 fw-bolder text-dark"><%= t("student.placeholder.email1") %></label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= f.email_field :email, class: "form-control form-control-lg form-control-solid"  %>  
              <!--end::Input-->
            <div class="fv-plugins-message-container invalid-feedback"></div></div>
            <!--end::Input group-->
            <!--begin::Actions-->
            <div class="text-center">
              <!--begin::Submit button-->
              <%#= link_to t('btn.confirm_yes'), check_user_mail_path(email: "aungaung"), class: "btn btn-lg btn-primary w-100 mb-5" %>         
              <%= f.submit "ログイン", class: "btn btn-lg btn-primary w-100 mb-5" %>
              <!--end::Submit button-->
              <!--begin::Separator-->
              <div class="text-center text-muted text-uppercase fw-bolder mb-5">or</div>
              <!--end::Separator-->
              <%= link_to user_facebook_omniauth_authorize_path, method: :post ,data: { turbolinks: false }, class: "btn position-relative facebook-bg opacity-75-hover btn-lg w-100 py-3 mb-4" do %>
                  <span class="position-absolute top-50 start-0 translate-middle-y mt-n1 ms-7"> 
                  <img alt="Logo" src="../../../assets/media/svg/brand-logos/facebook-4.svg" class="h-20px me-2">
                  </span>
                  <span class="text-white fw-bolder w-100"><%= t('registeration.session.facebook_login') %></span>
              <% end %> 
              <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post ,data: { turbolinks: false }, class: "btn position-relative bg-secondary opacity-75-hover btn-lg w-100 py-3 mb-4" do %>
                  <span class="position-absolute top-50 start-0 translate-middle-y ms-7"> 
                  <img alt="Logo" src="../../../assets/media/svg/brand-logos/google-icon.svg" class="h-20px me-2">
                  </span>
                  <span class="text-dark fw-bolder w-100"><%= t('registeration.session.google_login') %></span>
              <% end %> 
              <%= link_to user_line_omniauth_authorize_path , method: :post ,data: { turbolinks: false }, class: "btn position-relative line-bg opacity-75-hover btn-lg w-100 py-3 mb-4" do %>
                  <span class="position-absolute top-50 start-0 translate-middle-y ms-7"> 
                  <img alt="Logo" src="../../../assets/media/svg/brand-logos/line.svg" class="h-20px me-2">
                  </span>
                  <span class="text-white fw-bolder w-100"><%= t('registeration.session.line_login') %></span>
              <% end %>
            </div>
            <!--end::Actions-->
            <div>
            </div>
          </div>    
          <!--end::Form-->
        </div>
        <!--end::Wrapper-->
      </div>
      <!--end::Content-->
      <!--begin::Footer-->
      <div class="d-flex flex-center flex-column-auto p-10">
        <!--begin::Links-->
        <div class="d-flex align-items-center fw-bold fs-6">
          <%= link_to t('welcome.privacy policy.top_page_link.link1'), welcome_privacy_path(user_type: @usertype || @user_type) , class: "text-muted text-hover-primary px-2", target: '_blank' %>/
          <%= link_to t('welcome.privacy policy.top_page_link.link2'), welcome_term_condition_path, class: "text-muted text-hover-primary mx-3", target: '_blank'%>/
          <%= link_to t('welcome.privacy policy.top_page_link.link3'), welcome_contact_path(user_type: @usertype || @user_type), class: "text-muted text-hover-primary px-2"  %> 	
        </div>
        <!--end::Links-->
      </div>
      <!--end::Footer-->
    </div>
    <!--end::Authentication - Sign-in-->
  </div> 
<% end %>
<%= javascript_pack_tag "user/user.js" %>