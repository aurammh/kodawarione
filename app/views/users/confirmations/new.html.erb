<div class="container p-3 p-sm-5">
  <div class="row justify-content-center my-5 p-2">
    <div class="col-12 col-lg-8 col-xl-6">
      <div class="card login-card-shadow bg-white p-3 p-sm-5">
        <div class="text-group-left mb-4">          
            <h3 class="text-center"><%= t('password_setting.title.change_password_setting') %></h3>
            <hr class="grandient-hr">
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
              </div>
              <div class="form-group">
                <%= f.submit "送信", class: "form-control btn btn-lg btn-primary"  %>
              </div>
            <% end %>   
            <%= link_to "Log in", new_session_path(resource_name,user_type: resource.user_type) %><br />
            <%= link_to "Sign up", new_registration_path(resource_name,user_type: resource.user_type) %><br />
            <%= link_to "Forgot your password?", new_password_path(resource_name,user_type: resource.user_type) %><br />

        </div>
      </div>
   </div>
  </div> 
</div>
