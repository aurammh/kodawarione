<section class="admin-details px-sm-4 d-flex flex-column align-items-center mt-3 mb-5 pb-5">
    <div class="col-12 bg-white py-5 shadow event-info-box">
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-sm-6 px-2 mb-3">
                <div class="admin-font-color h3"><%= t('partner.title.super_partner_information')%></div>
            </div>

            <div class="d-flex">
                <div class="px-3 mt-2">
                    <%= link_to t('btn.edit'), edit_admin_super_partner_path(id: @admin_super_partner.id), class: "admin-sidebar-color text-white col-sm-5 col-md-4 col-lg-2 custom-btn px-3 py-2 text-decoration-none" %> 
                </div>
                <div class="text-center mb-3">
                <%= render 'destroy' %>
                </div>
                <div class="px-3 mt-2">
                    <%= link_to t('super_partner.super_partner_user.btn_goto'), admin_super_partner_users_path(super_partner_id: @admin_super_partner.id), class: "admin-sidebar-color text-white col-sm-5 col-md-4 col-lg-2 custom-btn px-3 py-2 text-decoration-none" %> 
                </div>
            </div>
        </div>

        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-9">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Admin::SuperPartner.human_attribute_name('name') %></span>
                        <span class="text-secondary text-break"><%= @admin_super_partner.name %></span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::Partner.human_attribute_name('partner_code') %></span>
                        <span class="text-secondary text-break"><%= @admin_super_partner.super_partner_code %></span>
                    </div>  
                </div>
            </div>
        </div>
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-9">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::Partner.human_attribute_name('phone_no')  %></span>
                        <span class="text-secondary text-break text-break"><%= (@admin_super_partner.phone_no) %></span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('partner.title.current_address') %></span>
                        <span class="text-secondary"><%= @admin_super_partner.display_address %></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-9">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('admin.news.news_created_date') %></span>
                        <span class="text-secondary text-break"><%= l(@admin_super_partner.created_at.strftime('%Y-%m-%d').to_date, default: '-') %></span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::Partner.human_attribute_name('website_url') %></span>
                        <span class="text-secondary text-break"><%= @admin_super_partner.website_url %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>