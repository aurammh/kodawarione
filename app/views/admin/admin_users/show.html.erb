<section class="admin-details px-sm-4 d-flex flex-column align-items-center mt-3 mb-5 pb-5">
    <div class="col-12 bg-white py-5 shadow event-info-box">
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-sm-6 px-2 mb-3">
                <div class="admin-font-color h3"><%= t('partner.partner_user.title.partner_user_information')%></div>
            </div>

            <div class="d-flex">
                <div class="px-3 mt-2">
                    <%= link_to t('btn.edit'), edit_admin_admin_user_path(id: @admin_user.id), class: "admin-sidebar-color text-white col-sm-5 col-md-4 col-lg-2 custom-btn px-3 py-2 text-decoration-none" %> 
                </div>
                <div class="text-center mb-3">
                <%= render 'destroy' %>
                </div>
            </div>
        </div>

        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-9">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= PartnerUser.human_attribute_name('first_name') %></span>
                        <span class="text-secondary"><%= @admin_user.first_name %></span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= PartnerUser.human_attribute_name('last_name') %></span>
                        <span class="text-secondary"><%= @admin_user.last_name %></span>
                    </div>  
                </div>
            </div>
        </div>
        <div class="row px-2 px-lg-4">
        <div class="col-12 col-md-12 col-lg-9">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 my-3 d-flex flex-column">
                    <span class="h6 admin-font-color mb-2"><%= PartnerUser.human_attribute_name('email') %></span>
                    <span class="text-secondary"><%= @admin_user.email %></span>
                </div>
            </div>
        </div>
    </div>
  
</section>