<button type="button" class="btn-danger custom-btn col-sm-12 px-4 pb-2 pt-1 text-decoration-none" data-toggle="modal" data-target="#delete_news">
    <%= t('common.profile_delete')%>
</button>
<div class="modal fade pl-0" id="delete_news" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content ">
            <div class="modal-header admin-sidebar-color text-white">
                <h3 class="modal-title" id="exampleModalLongTitle"><%= t('common.modal_confirm_title') %></h3>
                <button type="button" class="close text-white btn-close-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body company_type">
                <section>
                    <div class="text-left py-3">
                        <h5 class="text-dark font-weight-bold pl-1"><%= t('search.admin_delete_msg') %></h5>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">
                        <%= link_to t('btn.confirm_yes'),{:controller => "super_partner_users", :action => 'destroy', :id => @admin_super_partner_user.id},:method => :delete, class: "col-sm-5 col-md-4 col-lg-2 admin-sidebar-color text-white font-weight-bold custom-btn px-3 py-2 text-decoration-none" %>         
                        <button type="button" class="btn-secondary text-white font-weight-bold col-sm-6 col-md-4 col-lg-2 custom-btn px-2 py-2 text-decoration-none ml-3" data-dismiss="modal"><%= t('btn.cancel') %></button>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>