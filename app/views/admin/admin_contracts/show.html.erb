<section class="admin-details px-sm-4 d-flex flex-column align-items-center mt-3 mb-5 pb-5">
    <div class="col-12 bg-white py-5 shadow event-info-box search-details ">
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-sm-6 px-2 mb-3">
                <div class="admin-font-color h3"><%= t('partner_contract.contract_information')%></div>
            </div>

            <div class="d-flex">
                <div class="px-3 mt-2">
                    <%= link_to t('btn.edit'), edit_admin_admin_contract_path(id: @admin_contract.id), class: "admin-sidebar-color text-white col-sm-5 col-md-4 col-lg-2 custom-btn px-3 py-2 text-decoration-none"  %> 
                </div>
                <div class="text-center mb-3">
                    <%= render 'destroy' %>
                </div>
            </div>
        </div>
        
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Admin::AdminContract.human_attribute_name('partner_id') %></span>
                        <span class="text-secondary text-break"><%= get_admin_partner_name(@admin_contract.partner_id) %></span>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('partner_contract.contract_period') %></span>
                        <span class="text-secondary text-break"><%= l @admin_contract.start_date %>～<%= l @admin_contract.end_date %></span>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('partner_contract.training_period') %></span>
                        <span class="text-secondary text-break"><%= l @admin_contract.training_start_date %>～<%= l @admin_contract.training_end_date %></span>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('partner_contract.partner_plan_id') %></span>
                        <span class="text-secondary text-break"><%= get_admin_plan_name( @admin_contract.admin_plan_id) %></span>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= t('partner_contract.payment_type') %></span>
                        <span class="text-secondary text-break"><%= @admin_contract.payment_type.nil? ? '' : t("payment_type.#{@admin_contract.payment_type}") %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>