<%= form_for(@admin_contract) do |form| %>
  <div class="row col-12 event-registration admin-detail px-1 px-sm-4 mt-3">  
    <section class="col-md-12 mb-5 pl-5">
      <div class="d-container shadow py-4 bg-white" style="border-radius: 0.8rem">
        <div class="col-12 pb-4 pt-3">
          <span class="h4 admin-font-color"><%= t('admin.contract.head_title')%></span>
        </div>
        <div class="col-12 mb-3">
          <div class="d-flex">
            <%= form.label :partner_id, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <%= form.collection_select(:partner_id ,@partner_name_list, :id ,:name, { :include_blank => ( t'select.not_select')}, selected: form.object.partner_id, :class=> "form-control form-control-solid", :data => { :control => 'select2', 'hide-search' => true }) %>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:partner_id)[0] %></p>                                  
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="d-flex">
            <%= form.label :start_date, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <div class="date-wrapper" id="e_start_date" >
            <%= form.text_field :start_date, "data-input": "", class: "form-control shadow-none errors", id: "event_start_date", data: { :placeholder => t("event.placeholder.date_format") } %>
            <a class="icon" title="toggle" data-toggle><i class="far fa-calendar-alt"></i></a>
          </div>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:start_date)[0] %></p>                                  
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="d-flex">
            <%= form.label :end_date, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <div class="date-wrapper" id="e_end_date">
            <%= form.text_field :end_date, "data-input": "", class: "form-control shadow-none errors", id: "event_end_date", data: { :placeholder => t("event.placeholder.date_format") } %>
            <a class="icon" title="toggle" data-toggle><i class="far fa-calendar-alt"></i></a>
          </div>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:end_date)[0] %></p>                                  
        </div>

        <div class="col-12 mb-3">
          <div class="d-flex">
            <%= form.label :admin_plan_id, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <%= form.collection_select(:admin_plan_id ,@admin_plan_list, :id ,:name, { :include_blank => ( t'select.not_select')}, selected: form.object.admin_plan_id, :class=> "form-control form-control-solid", :data => { :control => 'select2', 'hide-search' => true }) %>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:admin_plan_id)[0] %></p>                                  
        </div>

        <div class="col-12 mb-3">
          <div class="d-flex">
            <%= form.label :payment_type, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <%= form.select(:payment_type, payment_options,{:include_blank => ( t'select.not_select')}, {:class => "form-control form-control-solid", :id =>"payment_type"}) %>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:payment_type)[0] %></p>                                  
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="d-flex">
            <%= form.label :training_start_date, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <div class="date-wrapper" id="p_start_date">
            <%= form.text_field :training_start_date, "data-input": "", class: "form-control shadow-none errors", id: "post_start_date", data: { :placeholder => t("event.placeholder.date_format") } %>
            <a class="icon" title="toggle" data-toggle><i class="far fa-calendar-alt"></i></a>
          </div>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:training_start_date)[0] %></p>                                  
        </div>

        <div class="col-12 col-md-6 mb-3">
          <div class="d-flex">
            <%= form.label :training_end_date, class: "form-label"  %>
            <label class="ml-auto required-label"> <%= t('common.require') %> </label>
          </div>
          <div class="date-wrapper" id="p_end_date">
            <%= form.text_field :training_end_date, "data-input": "", class: "form-control shadow-none errors", id: "post_end_date", data: { :placeholder => t("event.placeholder.date_format") } %>
            <a class="icon" title="toggle" data-toggle><i class="far fa-calendar-alt"></i></a>
          </div>
          <p class="ms-invalid-feedback mt-1"><%= @admin_contract.errors.full_messages_for(:training_end_date)[0] %></p>                                  
        </div>

      </div>        
      <div class="actions d-flex justify-content-center mt-5">
        <%= form.submit (t "btn.update"), :class => 'custom-btn text-white' %>
      </div> 
    </section> 
  </div>  
<% end %>

<%= javascript_pack_tag "admin/article.js" %>
<%= javascript_pack_tag "company/event.js" %>
<%= javascript_pack_tag "common.js" %>