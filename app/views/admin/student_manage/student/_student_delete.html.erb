<!-- col-sm-12 col-md-4 col-lg-3 -->
<button type="button" class="custom-btn btn-danger px-4 pb-2 pt-1 text-decoration-none text-white" data-toggle="modal" data-target="#student_delete">
    <%= t('common.profile_delete')%>
</button>
<div class="modal fade pl-0" id="student_delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content ">
            <div class="modal-header admin-sidebar-color text-white">
                <h3 class="modal-title" id="exampleModalLongTitle"><%= t('common.modal_confirm_title') %></h3>
                <button type="button" class="close text-white btn-close-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body company_type">
                <section>
                    <div class="text-left py-3">
                        <h5 class="text-dark font-weight-bold pl-1"><%= t('search.admin_delete_msg') %></h5>
                    </div>
                    <div class="mt-3 d-flex justify-content-end">
                        <%= link_to t('btn.confirm_yes'), admin_student_manage_student_delete_path(:id => @student_info.id, :status => params[:status]), class: "admin-sidebar-color text-white font-weight-bold col-sm-6 col-md-4 col-lg-2 admin-delete-btn px-2 py-2 text-decoration-none"%>
                        <button type="button" class="btn-secondary text-white font-weight-bold col-sm-6 col-md-4 col-lg-2 admin-delete-btn px-2 py-2 text-decoration-none ml-3" data-dismiss="modal"><%= t('btn.cancel') %></button>
                    </div>
                </section>
            </div>

        </div>
    </div>
</div>