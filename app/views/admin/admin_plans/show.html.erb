<section class="admin-details px-sm-4 d-flex flex-column align-items-center mt-3 mb-5 pb-5">
    <div class="col-12 bg-white py-5 shadow event-info-box search-details ">
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-sm-6 px-2 mb-3">
                <div class="admin-font-color h3"><%= t('partner_plan.plan_detail')%></div>
            </div>

            <div class="d-flex">
                <div class="px-3 mt-2">
                    <%= link_to t('btn.edit'), edit_admin_admin_plan_path(id: @admin_plan.id), class: "admin-sidebar-color text-white col-sm-5 col-md-4 col-lg-2 custom-btn px-3 py-2 text-decoration-none"  %> 
                </div>
                <div class="text-center mb-3">
                    <button type="button" class="btn-danger col-sm-12 custom-btn px-4 pb-2 pt-1 text-decoration-none" data-toggle="modal" data-target="#delete_news">
                        <%= t('common.profile_delete')%>
                    </button>
                    <% if Admin::AdminContract.find_by(admin_plan_id: @admin_plan.id).present? == true%>
                        <%= render 'warning' %>
                    <% else %>
                        <%= render 'destroy' %>
                    <% end %>
                </div>
            </div>
        </div>
        
        <div class="row px-2 px-lg-4">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::PartnerPlan.human_attribute_name('name') %></span>
                        <span class="text-secondary text-break"><%= @admin_plan.name %></span>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::PartnerPlan.human_attribute_name('fee') %></span>
                        <span class="text-secondary"><%= number_with_delimiter(@admin_plan.fee) %> å†† </span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-3 col-lg-4 my-3 d-flex flex-column">
                        <span class="h6 admin-font-color mb-2"><%= Partner::PartnerPlan.human_attribute_name('content') %></span>
                        <span class="text-secondary text-break"><%= @admin_plan.content %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>