											</td>
										</tr>
									<% end %>
								</tbody>
								<!--end::Table body-->
							</table>
							<!--end::Table-->							
						</div>
						<!--end::Table container-->
					</div>
					<!--begin::Body-->
				</div>
				<!--end::Table-->
				<!--start::Pagination-->
				<% if @communication_mail_template_registrations.present? %>
					<!--begin::pagination-->
					<div class="d-flex flex-wrap justify-content-between align-items-center pt-10">
						<div class="d-flex flex-wrap">
							<%= paginate @communication_mail_template_registrations %>
						</div>
						<div class="d-flex align-items-center py-3">
							<span class="text-muted"><%=  t('common.list_display')  %><%= @communication_mail_template_registrations.total_count %> <%=  t('common.to')  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= @communication_mail_template_registrations.offset_value + 1 %> ~ <%=  @communication_mail_template_registrations.offset_value + @communication_mail_template_registrations.count %> <%=  t('common.search_result')  %> </span>
						</div>
					</div>
					<!--end::pagination-->
				<% end %>
				<!--end::Pagination-->					
			</div>
		</div>
		<!--end::Tab Content-->
	</div>
