<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Commitment-->
    <div class="card bg-body mb-5 mb-xl-10" id="kt_profile_details_view">
        <!--begin::Card header-->
        <div class="card-header cursor-pointer">
            <!--begin::Card title-->
            <div class="card-title m-0">
                <h3 class="fw-bolder m-0"><%=t ('student_commitment.title.student_commitment_title1')%></h3>
            </div>
            <!--end::Card title-->
            <% if can?(:edit_commitment, Kodawarione::StudentManage)%>
            <%= link_to t('btn.edit'), kodawarione_student_manage_edit_student_commitment_path, class: "btn btn-primary align-self-center" %>
            <% end %>
        </div>
        <!--begin::Card header-->
        <!--begin::Card body-->
        <div class="card-body p-9">
            <!--begin::Row-->
            <% if @student_info.nick_name.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600"><%= t'status.student_name' %></label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-gray-800"><%= @student_info.nick_name %></span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Row-->
            <!--begin::Input group-->
            <% if @student_info.current_address.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600"><%= Student::Student.human_attribute_name('complete_address') %></label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8 fv-row">
                        <span class="fw-bolder text-gray-800 fs-6"><%= get_prefecture_name(@student_info.current_address) %></span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->
            <!--begin::Input group-->
            <% unless @student_info.preferred_working_area.nil? || @student_info.preferred_working_area == [nil] %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600">
                        <%= Student::Student.human_attribute_name('complete_desired_location') %>
                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8 d-flex align-items-center">
                        <span class="fw-bolder fs-6 text-gray-800 me-2"><%= get_prefecture_name_with_multi_select(@student_info.preferred_working_area) %></span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->
            <!--begin::Input group-->
            <% if @student_info.birthday.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600">
                        <%= Student::Student.human_attribute_name('birthday') %>
                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8 d-flex align-items-center">
                        <span class="fw-bolder fs-6 text-gray-800 me-2"><%= l @student_info.birthday %></span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->            
            <!--begin::Input group-->
            <% if @student_info.gender.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600"><%= Student::Student.human_attribute_name('gender') %></label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-gray-800"> <%= t("student.gender.#{@student_info.gender}") %></span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->
            <!--begin::Input group-->
            <% if @student_info.qualification_string.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600">
                        <%= Student::Student.human_attribute_name('qualification_string') %>
                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-gray-800">
                            <%= @student_info.qualification_string %> 
                        </span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->
            <!--begin::Input group-->
            <% if @student_info.commitment.present? %>
                <div class="row mb-7">
                    <!--begin::Label-->
                    <label class="col-lg-4 fw-semibold text-gray-600">
                        <%= Student::Student.human_attribute_name('commitment') %>
                    </label>
                    <!--end::Label-->
                    <!--begin::Col-->
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-gray-800">
                            <%= @student_info.commitment %> 
                        </span>
                    </div>
                    <!--end::Col-->
                </div>
            <% end %>
            <!--end::Input group-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Commitment-->
    <!--begin::Basic info-->
