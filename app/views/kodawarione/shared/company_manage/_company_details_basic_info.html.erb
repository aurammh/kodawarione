                            <tr>
                                <td class="text-gray-600"><%= t'activerecord.attributes.company/company.main_bank' %>:</td>
                                <td class="text-gray-800 fw-bolder"><%= @company_details.main_bank %></td>
                            </tr>
                        <% end %>
						<!--end::Row-->
					</table>
					<!--end::Details-->
				</div>
				<!--end::Row-->
				<!--begin::Row-->
				<div class="flex-equal">
					<!--begin::Details-->
					<table class="table fs-6 fw-bold gs-0 gy-2 gx-2 m-0">
						<!--begin::Row-->
                        <% if @company_details.basic_idea.present? %>
                            <tr>
                                <td class="text-gray-600 min-w-175px w-175px"><%= t'activerecord.attributes.company/company.basic_idea' %>:</td>
                                <td class="text-gray-800 min-w-200px">
                                    <span class="text-gray-800 fw-bolder"><%= @company_details.basic_idea %></span>
                                </td>
                            </tr>
                        <% end %>
						<!--end::Row-->
						<!--begin::Row-->
                        <% if @company_details.representative.present? %>
                            <tr>
                                <td class="text-gray-600"><%= t'activerecord.attributes.company/company.representative' %>:</td>
                                <td class="text-gray-800 fw-bolder"><%= @company_details.representative %></td>
                            </tr>
                        <% end %>
						<!--end::Row-->
						<!--begin::Row-->
                        <% if @company_details.contact.present? %>
                            <tr>
                                <td class="text-gray-600"><%= t'activerecord.attributes.company/company.contact' %>:</td>
                                <td class="text-gray-800 fw-bolder"><%= @company_details.contact %></td>
                            </tr>
                        <% end %>
						<!--end::Row-->
						<!--begin::Row-->
                        <% if @company_details.transportation_facilities.present? %>
                            <tr>
                                <td class="text-gray-600"><%= t'activerecord.attributes.company/company.transportation_facilities' %>:</td>
                                <td class="text-gray-800 fw-bolder"><%= @company_details.transportation_facilities %></td>
                            </tr>
                        <% end %>
						<!--end::Row-->
					</table>
					<!--end::Details-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Row-->
		</div>
        <% end %>
