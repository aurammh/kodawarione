                            <tr>
                                <td class="text-gray-600"><%= t'activerecord.attributes.company/company.sales_amount' %>:</td>
                                <td class="text-gray-800 fw-bolder"><%= @company_details.sales_amount %></td>
                            </tr>
                        <% end %>
						<!--end::Row-->
						<!--begin::Row-->
