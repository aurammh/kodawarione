<!--begin::Breadcrumb-->
<% breadcrumbs_navigation_add (t('interview_story.title.interview_story_title')), company_interview_stories_path %>
<% breadcrumbs_navigation_add (t('interview_story.title.show_story')), '#' %>
<%= render_company_breadcrumbs_navigation(t('interview_story.title.show_story')) %>	
<!--end::Breadcrumb-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
  <!--begin::Container-->
  <div class="container">
    <%= render partial: "company/shared/commitment_profiles/common_banner" %>
    <div class="card bg-body mb-xl-10">
      <!--begin::Card body-->
      <div class="card-body p-lg-17">
        <div class="row">
          <!--begin::Content-->
          <div class="col-lg-12">
            <div class="mt-10">
              <div class="w-100 mb-10">
                <h3 class="fs-2x text-dark fw-bolder"><%= @company_interview_story.title %></h3>
                <div class="mt-1">
                  <!--begin::Avatar-->
                  <div class="symbol symbol-circle symbol-30px me-3">
                    <% if @company_interview_story.image.attached? %>
                      <%= image_tag (@company_interview_story.image), :class=> "" %>
                    <% else %>
                      <%= image_tag "avatar/preview.svg", :class=> "" %>
                    <% end %>
                  </div>
                  <!--end::Avatar-->
                  <span class="text-muted fw-bolder fs-7 me-5">By : <%= current_company.company_name %></span>
                  <span class="text-muted fw-bolder fs-7 me-5">Created at : <%= l @company_interview_story.created_at.to_date %></span>
                </div>
              </div>
              <div class="fs-6 fw-bold text-gray-700 pb-10">
                <%= @company_interview_story.review %>
              </div>
              <!--begin::Actions-->
              <% if can?(:update, Company::InterviewStory) %>
                <div class="d-flex justify-content-center mt-7">
                  <%= link_to t('btn.edit'), edit_company_interview_story_path(@company_interview_story), class: "btn btn-primary font-weight-bolder mr-2" %> 
                </div>
              <% end %>
              <!--end::Actions-->
            </div>     
          </div>
          <!--end::Content-->
        </div>
      </div>
      <!--end::Card body-->
    </div>
    <!--end::Card-->
  </div>
  <!--end::Container-->
</div>
<!--end::Entry-->