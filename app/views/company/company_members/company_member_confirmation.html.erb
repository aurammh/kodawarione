<div class="d-flex flex-column flex-root">
  <!--begin::Company Member Confirmation -->
  <div class="d-flex flex-column flex-column-fluid">
    <!--begin::Content-->
    <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
      <!--begin::Logo-->
      <div class="d-flex flex-center text-center mb-12">
        <%= link_to root_path do %>
          <%= image_tag "layout/header_logo.png", class: "h-40px" %>   
        <% end %>
      </div>
      <!--end::Logo-->
      <!--begin::Wrapper-->
      <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
        <!--begin::Form-->
        <form class="form w-100" novalidate="novalidate" id="kt_password_reset_form">
          <!--begin::Heading-->
          <div class="text-center mb-10">
            <!--begin::Title-->
            <h1 class="text-dark mb-3"><%= t('company_member.title.welcome') %> <%= @company_name %></h1>
            <!--end::Title-->
            <!--begin::Link-->
            <div class="text-gray-400 fw-bold fs-4"><%= t('company_member.title.confrim_text1') %></div>
            <div class="text-gray-400 fw-bold fs-4"><%= t('company_member.title.confrim_text2') %></div>
            <!--end::Link-->
          </div>
          <!--begin::Heading-->
          <!--begin::Actions-->
          <div class="d-flex flex-wrap justify-content-center pb-lg-0">
            <%= link_to( company_company_member_accept_path(confirmation_token: @company_member.confirmation_token), class: "btn btn-lg btn-primary fw-bolder me-4", data: { turbolinks: false }) do %>
              <%= t('company_member.btn.accept') %>
            <% end %>
            <%= link_to( company_company_member_reject_path(confirmation_token: @company_member.confirmation_token), class: "btn btn-lg btn-danger fw-bolder", data: { turbolinks: false }) do %>
              <%= t('company_member.btn.deny') %>
            <% end %>
          </div>
          <!--end::Actions-->
        </form>
        <!--end::Form-->
      </div>
      <!--end::Wrapper-->
    </div>
    <!--end::Content-->
    <!--begin::Footer-->
    <div class="d-flex flex-center flex-column-auto p-10">
      <!--begin::Links-->
      <div class="d-flex align-items-center fw-bold fs-6">
        <%= link_to t('welcome.privacy policy.top_page_link.link1'),welcome_privacy_path(user_type: @usertype || @user_type) , class: "text-gray-400 text-decoration-none text-hover-primary px-2", target: '_blank' %>
        <%= link_to t('welcome.privacy policy.top_page_link.link3'), welcome_contact_path(user_type: @usertype || @user_type), class: "text-gray-400 text-decoration-none text-hover-primary px-2"  %> 						
      </div>
      <!--end::Links-->
    </div>
    <!--end::Footer-->
  </div>
  <!--end::Company Member Confirmation-->
</div>
<%= javascript_pack_tag "user/user.js" %> 