<!--begin::Header-->
<% breadcrumbs_navigation_add (t('common.favourite_users')), '#' %>
<%= render_company_breadcrumbs_navigation(t('common.favourite_users')) %>
<!--end::Header-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Container-->
    <div class="container-xxl" id="kt_content_container">
        <!--begin::Event Tables Widget -->
        <div class="card bg-body mb-5 mb-xl-10">
            <!--begin::Header-->
            <div class="card-header border-0 pt-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label fw-bolder fs-3 mb-1"><%= t('common.favourite_users') %></span>
                    <span class="text-muted mt-1 fw-bold fs-7"><%= @favourite_users_list.size %> <%= t('common.student_total_count') %></span>
                </h3>
            </div>
            <!--end::Header-->
            <!--begin::Body-->
            <div class="card-body py-3">
                <!--begin::Table container-->
                <div class="table-responsive  overflow-auto">
                    <!--begin::Table-->
                    <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                        <!--begin::Table head-->
                        <thead>
                            <tr class="fw-bolder text-muted">
                                <th class="min-w-300px"><%= t('student.student_show.name')%></th>
                                <th class="min-w-100px"><%= t('dashboard.age')%></th>
                                <th class="min-w-100px"><%= t('dashboard.gender')%></th>
                                <th class="min-w-150px"><%= Student::Student.human_attribute_name('school_type') %></th>
                                <th class="min-w-150px"><%= Student::Student.human_attribute_name('school_name') %></th>
                                <th class="min-w-150px"><%= Student::Student.human_attribute_name('graduation_date') %></th>
                                <th class="min-w-100px text-end">Actions</th>
                            </tr>
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            <% @favourite_users_list.each do |student| %>
                                <tr>
                                    <td class="">
                                        <div class="d-flex align-items-center">
                                            <!--begin:: Avatar -->
                                            <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
                                                <% if student.image.attached? %>
                                                <%= image_tag (student.image), :class=> "symbol-label" %>
                                                <% else %>
                                                    <% if student.gender == "female" %>
                                                        <%= image_tag "avatar/female.svg", :class=> "symbol-label" %>                                
                                                    <% else %>
                                                        <%= image_tag "avatar/male.svg", :class=> "symbol-label" %>   
                                                    <% end %>
                                                <% end %> 
                                            </div>
                                            <!--end::Avatar-->
                                            <!--begin::User details-->
                                            <div class="d-flex flex-column">
                                                <span class="text-gray-800 mb-1">
                                                    <%= student.nick_name %> 
                                                </span>
                                                <span class="text-muted fw-bold text-muted d-block fs-7"><%= student.user.email %></span>
                                            </div>
                                            <!--begin::User details-->
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bolder d-block fs-6"><%=  get_birthday(student.birthday)  %></span>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bold d-block fs-6"><%=  get_gender(student.gender) %></span>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bold d-block fs-6"><%= get_school_type(student.school_type) %></span>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bold d-block fs-6"><%=  get_student_field_name(student.school_name) %></span>
                                    </td>
                                    <td>
                                        <span class="text-muted fw-bold d-block fs-6"><%=  get_graduation_date(student.graduation_date) %></span>
                                    </td>                                    
                                    <td>
                                        <div class="d-flex justify-content-end flex-shrink-0">
                                            <%= link_to company_student_details_path(:id => student.id), :class=>"btn btn-icon btn-bg-light btn-active-color-primary btn-sm" do %>
                                                <!--begin::Svg Icon | path: icons/duotune/art/art005.svg-->
                                                <span class="svg-icon svg-icon-3">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                                        <path d="M17.5 11H6.5C4 11 2 9 2 6.5C2 4 4 2 6.5 2H17.5C20 2 22 4 22 6.5C22 9 20 11 17.5 11ZM15 6.5C15 7.9 16.1 9 17.5 9C18.9 9 20 7.9 20 6.5C20 5.1 18.9 4 17.5 4C16.1 4 15 5.1 15 6.5Z" fill="black" />
                                                        <path opacity="0.3" d="M17.5 22H6.5C4 22 2 20 2 17.5C2 15 4 13 6.5 13H17.5C20 13 22 15 22 17.5C22 20 20 22 17.5 22ZM4 17.5C4 18.9 5.1 20 6.5 20C7.9 20 9 18.9 9 17.5C9 16.1 7.9 15 6.5 15C5.1 15 4 16.1 4 17.5Z" fill="black" />
                                                    </svg>
                                                </span>
                                                <!--end::Svg Icon-->
                                            <% end %>
                                        </div>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Table container-->
            </div>
            <!--begin::Body-->
        </div>
        <!--end::Event Tables Widget -->
        <!--begin::pagination-->
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div class="d-flex flex-wrap py-2 mr-3">
                <%= paginate @favourite_users_list %>
            </div>
            <div class="d-flex align-items-center py-3">
                <span class="text-muted"><%=  t('common.list_display')  %><%= @favourite_users_list.total_count %> <%=  t('common.to')  %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= @favourite_users_list.offset_value + 1 %> ~ <%=  @favourite_users_list.offset_value + @favourite_users_list.count %> <%=  t('common.search_result')  %> </span>
            </div>
        </div>
        <!--end::pagination-->					
    </div>
</div>
<%= javascript_pack_tag 'common.js'%>