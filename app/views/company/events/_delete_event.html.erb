<button type="button" class="btn btn-danger me-3 text-white" data-bs-toggle="modal" data-bs-target="#delete_news">
    <%= t('common.profile_delete')%>
</button>
<% unless ApplyFavouriteTransiction.find_by(event_id: @company_event.id).nil? %>
    <div class="modal fade pl-0" id="delete_news" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content ">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle"><%= t('plan.warning') %></h3>
                    <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    </div>
                </div>
                <div class="modal-body company_type">
                    <section>
                        <div class="text-start py-3">
                            <h5 class="text-dark font-weight-bold pl-1"><%= t('event.warning_text') %></h5>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
<% else %>
    <div class="modal fade pl-0" id="delete_news" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content ">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle"><%= t('common.modal_confirm_title') %></h3>
                    <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    </div>
                </div>
                <div class="modal-body company_type">
                    <section>
                        <div class="text-start py-3">
                            <h5 class="text-dark font-weight-bold pl-1"><%= t('search.admin_delete_msg') %></h5>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <%= link_to t('btn.confirm_yes'),{:controller => "events", :action => 'destroy', :id => @company_event.id},:method => :delete, class: "btn btn-danger text-white font-weight-bold col-sm-6 col-md-4 col-lg-2 custom-btn px-2 py-2 text-decoration-none ml-4 me-3" %>         
                            <button type="button" class="btn btn-dark text-white font-weight-bold col-sm-6 col-md-4 col-lg-2 px-2 py-2 ml-3" data-bs-dismiss="modal"><%= t('btn.cancel') %></button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
<% end %>