<!--begin::Body-->
<body id="kt_body" data-bs-spy="scroll" data-bs-target="#kt_landing_menu" data-bs-offset="200" class="bg-white position-relative">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
         <!--begin::Header Section-->
        <div class="mb-0">
            <!--begin::Wrapper-->
            <%= render partial: "company_page/header", :locals =>{:banner => false} %>
            <!--end::Wrapper-->
        </div>
        <!--end::Header Section--> 
        <div class="container w-100 w-lg-75 w-xl-1000px">
            <% if  @company_interview_story_hightlight.present? %>
                <!--begin::Interview story hightlight-->
                <% if  @company_interview_story_hightlight.present? %>
                    <div class="mt-20 pb-10">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fs-2x text-gray-600 fw-bolder p-4"><%= t("interview_story.title.latest_stories")%></h3> 
                        </div>
                        <!--begin::Row-->
                        <div class="row g-10">
                            <% @company_interview_story_hightlight.each do |story|%>
                                <!--begin::Col-->
                                <div class="col-12 col-lg-4 col-xl-4">
                                    <%= link_to story_details_path(id: params[:id],vacancy_id: nil,story_id: story,event_id: nil), class: "" do %>
                                        <div class="shadow-sm p-3">
                                            <!--begin::Card--> 
                                            <div class="card bg-body">
                                                <!--begin::Card body-->
                                                <div class="card-body p-5">
                                                    <!--begin::Item-->
                                                    <h5 class="fs-5 text-truncate text-dark fw-bolder text-hover-primary text-break"><%= story.title.truncate(30) %></h5>
                                                    <span class="text-muted fs-7 d-block fw-bold mt-5"><%= strip_tags(story.review.to_s).truncate(70)  %></span>
                                                    <div class="mt-3">
                                                        <!--begin::Avatar-->
                                                        <div class="symbol symbol-circle symbol-30px me-3">
                                                            <% if story.image.attached? %>
                                                                <%= image_tag (story.image), :class=> "" %>
                                                            <% else %>
                                                                <%= image_tag "avatar/preview.svg", :class=> "" %>
                                                            <% end %>
                                                        </div>
                                                        <!--end::Avatar-->
                                                        <span class="text-muted fw-bolder fs-7"><%= l story.created_at.to_date %></span>
                                                    </div>
                                                    <!--end::Item-->
                                                </div>
                                                <!--end::Card body-->
                                            </div> 
                                            <!--end::Card-->
                                        </div>    
                                    <% end %>         
                                </div> 
                                <!--end::Col-->
                            <% end %>
                        </div>
                        <!--end::Row-->
                    </div>
                <% end %>
                <!--end::Interview story hightlight-->
                <!--begin::Interview story lists-->
                <% if  @company_interview_story_lists.present? %> 
                    <div class="mt-20 pb-10">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fs-2x text-gray-600 fw-bolder p-4"><%= t("interview_story.title.all_stories")%></h3> 
                        </div>
                        <!--begin::Row-->
                        <div class="row g-10">
                            <% @company_interview_story_lists.each do |story|%>
                                <!--begin::Col-->
                                <div class="col-12 col-lg-4 col-xl-4">
                                    <%= link_to story_details_path(id: params[:id],vacancy_id: nil,story_id: story,event_id: nil), class: "" do %>
                                        <div class="shadow-sm p-3">
                                            <!--begin::Card--> 
                                            <div class="card bg-body">
                                                <!--begin::Card body-->
                                                <div class="card-body p-5">
                                                    <!--begin::Item-->
                                                    <h5 class="fs-5 text-truncate text-dark fw-bolder text-hover-primary text-break"><%= story.title.truncate(30) %></h5>
                                                    <span class="text-muted fs-7 d-block fw-bold mt-5"><%= strip_tags(story.review.to_s).truncate(70)  %></span>
                                                    <div class="mt-3">
                                                        <!--begin::Avatar-->
                                                        <div class="symbol symbol-circle symbol-30px me-3">
                                                            <% if story.image.attached? %>
                                                                <%= image_tag (story.image), :class=> "" %>
                                                            <% else %>
                                                                <%= image_tag "avatar/preview.svg", :class=> "" %>
                                                            <% end %>
                                                        </div>
                                                        <!--end::Avatar-->
                                                        <span class="text-muted fw-bolder fs-7"><%= l story.created_at.to_date %></span>
                                                    </div>
                                                    <!--end::Item-->
                                                </div>
                                                <!--end::Card body-->
                                            </div> 
                                            <!--end::Card-->
                                        </div>    
                                    <% end %>         
                                </div> 
                                <!--end::Col-->
                            <% end %>
                        </div>
                        <!--end::Row-->
                    </div>
                <% end %>
            <% else %>
                <!--begin::Card-->
                <div class="card bg-body border-0 shadow-sm mt-20">
                    <!--begin::Card body-->
                    <div class="card-body p-0">
                        <!--begin::Wrapper-->
                        <div class="card-px py-5 my-5">
                            <!--begin::Description-->
                            <div class="d-flex align-items-center flex-column">
                                <span class="m-1 fw-bolder"><%= t('company_detail.no_data_story') %></span>
                            </div>
                            <!--end::Description-->
                        </div>
                        <!--end::Wrapper-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            <% end %>
            <!--end::Interview story lists-->
            <!--begin::Latest vacancies-->
            <%= render partial: "company_page/vacancies_list", :locals =>{company_vacancies: @company_vacancies} %>
            <!--end::Latest vacancies-->
        </div>
        <!--begin::Scrolltop-->
        <div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
            <!--begin::Svg Icon | path: icons/duotune/arrows/arr066.svg-->
            <span class="svg-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <rect opacity="0.5" x="13" y="6" width="13" height="2" rx="1" transform="rotate(90 13 6)" fill="black" />
                    <path d="M12.5657 8.56569L16.75 12.75C17.1642 13.1642 17.8358 13.1642 18.25 12.75C18.6642 12.3358 18.6642 11.6642 18.25 11.25L12.7071 5.70711C12.3166 5.31658 11.6834 5.31658 11.2929 5.70711L5.75 11.25C5.33579 11.6642 5.33579 12.3358 5.75 12.75C6.16421 13.1642 6.83579 13.1642 7.25 12.75L11.4343 8.56569C11.7467 8.25327 12.2533 8.25327 12.5657 8.56569Z" fill="black" />
                </svg>
            </span>
            <!--end::Svg Icon-->
        </div>
        <!--end::Scrolltop-->
    </div>
    <!--end::Main-->
</body>
<!--end::Body-->