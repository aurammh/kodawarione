<!--begin::Header-->
<% breadcrumbs_navigation_add (t ('password_setting.title.personal_information_setting')), '#' %>
<%= render_company_breadcrumbs_navigation(t ('password_setting.title.personal_information_setting')) %>			
<!--end::Header-->
<% flash.each do |key, value| %>
    <% if value != nil %>
        <% if key == 'email_change' %>
            <div class="container">
                <div class="alert alert-success d-flex justify-content-between align-items-center" role="alert">
                <%= value %>
                <button type="button" class="close btn btn-outline-none fw-bold fs-2 p-0" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>
<!--begin::Container-->
<div id="kt_content" class="d-flex flex-column-fluid align-items-start container-xxl">
    <!--begin::Content-->
    <div class="content flex-row-fluid" id="kt_content_container">
        <!--begin::Card-->
        <div class="card bg-body mb-5 mb-xl-10 setting">
            <!--begin::Card header-->
            <div class="card-header border-0">
                <!--begin::Card title-->
                <div class="card-title m-0">
                    <h3 class="fw-bolder m-0"><%= t ('password_setting.title.personal_information_setting') %></h3>
                </div>
                <!--end::Card title-->
            </div>
            <!--end::Card header-->
            <!--begin::Form-->
            <%= form_with(model: @setting_company , url: company_setting_update_url , method: "patch", html: { autocomplete: "off" }   ) do |f| %>
                <div class="card-body border-top p-9">
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <%= f.label :last_name, class: "col-lg-4 col-form-label required fw-bold fs-6" %> 
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8 fv-row">
                            <%= f.text_field :last_name, class: "form-control h-auto form-control-solid py-4 px-8" ,:id=>"last_name" %> 
                            <p class ="text-danger fs-6 mt-1"><%= flash[:last_name] %></p>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->                 
                    <!--begin::Input group-->
                    <div class="row mb-6">
                        <!--begin::Label-->
                        <%= f.label :first_name, class: "col-lg-4 col-form-label required fw-bold fs-6" %> 
                        <!--end::Label-->
                        <!--begin::Col-->
                        <div class="col-lg-8 fv-row">
                            <%= f.text_field :first_name, class: "form-control h-auto form-control-solid py-4 px-8" ,:id=>"first_name" %> 
                            <p class ="text-danger fs-6 mt-1"><%= flash[:first_name] %></p>
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->   
                    <% if can?(:company_setting_update, Company::Company) %>           
                        <!--begin::Input group-->
                        <div class="row mb-6">
                            <!--begin::Label-->
                            <label for= "user_chk_edit_email" class="col-lg-4 col-form-label fw-bold fs-6"><%=  t('password_setting.change_email')%></label>
                            <!--end::Label-->
                            <!--begin::Col-->
                            <div class="col-lg-8 fv-row">
                                <div class="checkbox-inline py-3">
                                    <div class="col-12 col-sm-4 col-md-6 m-0 p-0">
                                        <label  class= "form-check form-check-sm form-check-custom form-check-solid">
                                            <%= f.hidden_field :h_email, value: @setting_company.email, id: "hidden_email" %>
                                            <%= f.check_box :chk_edit_email, :as => :boolean, checked: @setting_company.chk_edit_email == '1' ? true : false, class: 'chk_email form-check-input' %> 
                                            <span class="form-check-label"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="row mb-6 edit_username collapse">
                            <!--begin::Label-->
