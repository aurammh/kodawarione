                                                        <span class="form-check-label"></span>
                                                        <%= t ('student.assessment.brain_table1_th3') %> 
                                                    </label>      
                                                    <label for=<%= "student_assessment_sensory_and_friendly_#{k}_2"%> class="fs-7 me-2 me-sm-2 me-md-5 me-xl-5">
                                                        <%= f.radio_button "#{k}", 2, { :checked =>@student_assessment.sensory_and_friendly.nil?  ? false : @student_assessment.sensory_and_friendly[v-1] == 2, :class => "form-check-input" }%>
                                                        <span class="form-check-label"></span>
