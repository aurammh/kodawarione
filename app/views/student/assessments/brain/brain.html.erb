                                </div> 
                            </div>
                        </div>                         
                    </div>
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
    <%# confirm dialoag start%>
    <%= render "common/confirm_box" %>
