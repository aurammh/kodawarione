                                                    </label>  
                                                </div>
                                            </div>
                                            <!--end::Desktop view-->
                                        <% end %>
                                    <% end %>  
                                    <%= form.fields_for :adventurous_and_original  do |f| %>   
                                        <% Student::Assessment.adventurous_and_original_thinkings.each_with_index do |(k, v), index| %>
                                            <!--begin::Desktop view-->
                                            <label class="col-12 col-sm-12 col-md-4 col-lg-6 col-xl-6 col-form-label text-xl-center text-lg-center text-left font-weight-bold pb-0 fs-2">
                                                <i class="flaticon-questions-circular-button text-primary pr-2 me-1 fs-2"></i>
                                                <b><%= t ('student.assessment.brain_table1_th1') %>   <%= index + 31 %></b>
                                            </label>
                                            <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 col-form-label  ">                                    
                                                <span class=""><%= t("student_assessment.adventurous_and_original_thinkings.#{k}") %></span>
                                                <div class="form-check form-check-custom form-check-solid form-check-sm py-2"> 
                                                    <label for=<%= "student_assessment_adventurous_and_original_#{k}_1"%> class="fs-7 me-2 me-sm-2 me-md-5 me-xl-5">
                                                        <%= f.radio_button "#{k}", 1, { :checked =>@student_assessment.adventurous_and_original.nil?  ? false : @student_assessment.adventurous_and_original[v-1] == 1, :class => "form-check-input" }%>
                                                        <span class="form-check-label"></span>
                                                        <%= t ('student.assessment.brain_table1_th3') %> 
                                                    </label>        
                                                    <label for=<%= "student_assessment_adventurous_and_original_#{k}_2"%> class="fs-7 me-2 me-sm-2 me-md-5 me-xl-5">
                                                        <%= f.radio_button "#{k}", 2, { :checked =>@student_assessment.adventurous_and_original.nil?  ? false : @student_assessment.adventurous_and_original[v-1] == 2, :class => "form-check-input" }%>
                                                        <span class="form-check-label"></span>
                                                        <%= t ('student.assessment.brain_table1_th4') %> 
                                                    </label>   
                                                    <label for=<%= "student_assessment_adventurous_and_original_#{k}_3"%> class="fs-7 me-2 me-sm-2 me-md-5 me-xl-5">
                                                        <%= f.radio_button "#{k}", 3, { :checked =>@student_assessment.adventurous_and_original.nil?  ? false : @student_assessment.adventurous_and_original[v-1] == 3, :class => "form-check-input" }%>
